# =============================================================================
# Design-to-Code System - Environment Variables
# =============================================================================
#
# Copy this file to .env and fill in your actual values
# DO NOT commit .env with real credentials to version control
#

# =============================================================================
# Required - API Keys & Authentication
# =============================================================================

# OpenAI API Key (required)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Figma Access Token (required)
# Get your token from: https://www.figma.com/developers/api#access-tokens
FIGMA_ACCESS_TOKEN=figd_your-figma-access-token-here

# =============================================================================
# Optional - Figma Configuration
# =============================================================================

# Use Figma Desktop App (default: false)
# Set to true if you have Figma Desktop installed and MCP server configured
USE_DESKTOP=false

# Atomic Design Pattern URLs (Multi-Node Processing - Recommended)
# Provide full Figma URLs with node-id parameter for each atomic level
# System will process them sequentially: atoms → molecules → organisms
# If only one is provided, it will be used as a single node
FIGMA_ATOMS=https://www.figma.com/design/YOUR_FILE?node-id=1-2&m=dev
FIGMA_MOLECULES=https://www.figma.com/design/YOUR_FILE?node-id=3-4&m=dev
FIGMA_ORGANISMS=https://www.figma.com/design/YOUR_FILE?node-id=5-6&m=dev

# Legacy single URL support (fallback if atomic level URLs not provided)
FIGMA_URL=https://www.figma.com/design/YOUR_FILE?node-id=1-2&m=dev

# Figma File ID (optional - extracted from URL if not provided)
FIGMA_FILE_ID=your-figma-file-id

# =============================================================================
# Optional - Output Configuration
# =============================================================================

# Output directory for generated components (default: atomic-design-pattern/ui)
# Path is relative to design-to-code-system/ directory
OUTPUT_DIR=atomic-design-pattern/ui

# Path to global CSS file for token extraction (default: auto-detected)
GLOBAL_CSS_PATH=atomic-design-pattern/app/globals.css

# =============================================================================
# Optional - LangSmith Tracing & Observability
# =============================================================================

# Enable LangSmith tracing (default: false)
LANGSMITH_TRACING=false
LANGCHAIN_TRACING_V2=false

# LangSmith API Key (required if tracing is enabled)
# Get your key from: https://smith.langchain.com/settings
LANGSMITH_API_KEY=lsv2_sk_your-langsmith-api-key-here
LANGCHAIN_API_KEY=lsv2_sk_your-langsmith-api-key-here

# LangSmith Project Name (default: design-to-code-system)
LANGSMITH_PROJECT=design-to-code-system
LANGCHAIN_PROJECT=design-to-code-system

# LangSmith Workspace ID (required when tracing is enabled)
# Find in: https://smith.langchain.com/settings
LANGSMITH_WORKSPACE_ID=your-workspace-id-here

# LangSmith Trace Flushing
# Delay in milliseconds to wait for background traces to complete before process exit
# Increase if you see "pending" traces in LangSmith (default: 3000ms = 3 seconds)
LANGSMITH_FLUSH_DELAY_MS=3000

# OpenTelemetry Configuration (optional - for advanced tracing)
OTEL_EXPORTER_OTLP_LOGS_ENDPOINT=https://api.smith.langchain.com/otel/v1/claude_code
OTEL_EXPORTER_OTLP_HEADERS="x-api-key=your-api-key,Langsmith-Project=your-project"

# =============================================================================
# Optional - Model Configuration
# =============================================================================

# Default AI model for component generation (default: gpt-4o)
DEFAULT_MODEL=gpt-4o

# Fallback model if default fails (default: gpt-4o-mini)
FALLBACK_MODEL=gpt-4o-mini

# Available models (comma-separated, default: gpt-4o,gpt-4o-mini,o3-mini)
AVAILABLE_MODELS=gpt-4o,gpt-4o-mini,o3-mini

# =============================================================================
# Optional - Model Selection Thresholds
# =============================================================================

# Complexity threshold for simple tasks (default: 3)
# Tasks with complexity <= this use faster/cheaper models
SIMPLE_THRESHOLD=3
MODEL_SELECTION_SIMPLE_THRESHOLD=3

# Complexity threshold for complex tasks (default: 7)
# Tasks with complexity >= this use more powerful models
COMPLEX_THRESHOLD=7
MODEL_SELECTION_COMPLEX_THRESHOLD=7

# Prefer speed over quality (default: false)
PREFER_SPEED=false
MODEL_SELECTION_PREFER_SPEED=false

# Prefer quality over cost (default: false)
PREFER_QUALITY=false
MODEL_SELECTION_PREFER_QUALITY=false

# =============================================================================
# Optional - Cost Management
# =============================================================================

# Maximum cost per session in USD (default: 5.00)
COST_MAX_SESSION_COST=5.00
MAX_SESSION_COST=5.00

# Maximum cost per task in USD (default: 0.50)
COST_MAX_TASK_COST=0.50
MAX_TASK_COST=0.50

# Enable cost tracking (default: true)
COST_ENABLE_TRACKING=true
ENABLE_COST_TRACKING=true

# Enable cost optimization (default: true)
COST_ENABLE_OPTIMIZATION=true
ENABLE_COST_OPTIMIZATION=true

# =============================================================================
# Optional - Development & Debugging
# =============================================================================

# Enable debug mode (default: false)
DEBUG=false

# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info

# Enable performance monitoring (default: true)
ENABLE_PERFORMANCE_MONITORING=true

# Node environment (default: development)
NODE_ENV=development

# =============================================================================
# Optional - Checkpointing
# =============================================================================

# Enable workflow checkpointing (default: true)
# Allows resuming workflows after interruptions
ENABLE_CHECKPOINTING=true

# =============================================================================
# Notes
# =============================================================================
#
# 1. REQUIRED variables must be set for the system to work
# 2. All OPTIONAL variables have sensible defaults
# 3. For multi-node workflows, set FIGMA_ATOMS, FIGMA_MOLECULES, FIGMA_ORGANISMS
# 4. For single-node workflows, set FIGMA_URL
# 5. Enable LangSmith tracing for detailed observability
# 6. See README.md for detailed configuration guide
#
