{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext", 
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": true
  },
  "include": [
    "lib/**/*",
    "scripts/**/*",
    "run-workflow.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "app/**/*",
    "ui/**/*",
    ".next"
  ]
}